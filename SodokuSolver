{
    
}


void copyNumbers(int numbers[9][9], char (&grid)[11][11])
{
    int x = 0;
    int y = 0;
    
    for (int i = 0; i < 11; i++)
    {
      for (int j = 0; j < 11; j++)
	  {
	    
	    if(grid[i][j] != '|' || grid[i][j] != '+' || grid[i][j] != '-')
	    {
	       // grid[i][j] = numbers[x][y];
        }
        else if(grid[i][j] == '|')
        {
            i++;  
            cout << i << endl;
        }
        else if(grid[i][j] != '+' || grid[i][j] != '-')
        {
            j++;
            cout << j << endl;
        }
        y++;
	  }
	  x++;
    }
}


void buildBlank (char (&grid)[11][11])
{
//    cout<< "it works!";
//int count1 = 0;
//int count2 = 0;

  for (int i = 0; i < 11; i++)
    {
      for (int j = 0; j < 11; j++)
	  {
	    grid[i][j] = '0';

	  if (i == 3 || i == 7)
	    {
	      if (j == 3 || j == 7)
		    {
		        grid[i][j] = '+';
		    }
	      else
		    {
		        grid[i][j] = '|';
		    }
	    }
	    else if (j == 3 || j == 7)
	    {
	      grid[i][j] = '-';
	    }

	  }
    }
}


void buildPuzzle(int (&grid)[9][9])
{
    grid[6][0] = 2;
    grid[1][1] = 8;
    grid[5][1] = 7;
    grid[7][1] = 9;
    grid[0][2] = 6;
    grid[2][2] = 2;
    grid[6][2] = 5;
    grid[1][3] = 7;
    grid[4][3] = 6;
    grid[3][4] = 9;
    grid[5][4] = 1;
    grid[4][5] = 2;
    grid[7][5] = 4;
    grid[2][6] = 5;
    grid[6][6] = 6;
    grid[8][6] = 3;
    grid[1][7] = 9;
    grid[3][7] = 4;
    grid[7][7] = 7;
    grid[2][8] = 6;

}


void printNumbers (int grid[9][9])
{
    for (int i = 0; i < 9; i++)
    {
      for (int j = 0; j < 9; j++)
	    {
	     cout << grid[j][i];
	    }
      cout << endl;
    }
    cout << endl;
}


void printGrid (char grid[11][11])
{
  for (int i = 0; i < 11; i++)
    {
      for (int j = 0; j < 11; j++)
	    {
	     cout << grid[j][i];
	    }
      cout << endl;
    }
    cout << endl;
}
